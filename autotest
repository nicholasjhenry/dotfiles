# ~.autotest

# require 'redgreen/autotest' # doesn't agree with autospec

# use fsevent on OSX to determine file changes
#
require 'autotest/fsevent'

# autotest growl notification followed by options
#
require 'autotest_notification'
SPEAKING     = false
DOOM_EDITION = false
BUUF         = false
PENDING      = false
STICKY       = false

# ignore the SVN and Git hidden files within your code
#
Autotest.add_hook :initialize do |at|
  %w{.svn .hg .git vendor}.each {|exception| at.add_exception(exception)}
end  

