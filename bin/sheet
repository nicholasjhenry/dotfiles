#!/bin/bash

set -euo pipefail

# load env vars
if [ -f .env ]; then
  export $(cat .env | sed 's/#.*//g' | xargs)
fi

base_path=$HOME/.sheets

function help() {
echo
echo "A note task runner for $base_path"
echo
}

function find() {
    local file=$(tree -if $base_path | cut -c 25- | fzf --preview 'bat --style=numbers  $base_path{}')

    echo "$file"
    echo

    if [[ $file =~ (^"snippets") ]]; then
        bat --style plain --theme GitHub $base_path/$file
    else
        glow $base_path/$file -p -s $HOME/.glamour.json
    fi
}

function list() {
    ls -1 ~/.sheets
}

case "$1" in
    find)
        find
        ;;
    list)
        list
        ;;
    edit)
        $EDITOR $base_path/$2
        ;;
    *)
        help task
        exit 1
esac