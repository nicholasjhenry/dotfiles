# ~.autotest
require 'redgreen/autotest'
# require 'autotest/growl'
require 'autotest/fsevent'
require 'autotest_notification'
SPEAKING = false
DOOM_EDITION = false
BUUF = false
PENDING = false
STICKY = false

Autotest.add_hook :initialize do |at|
  unless ARGV.empty?
    if ARGV[0] == '-d'
      at.find_directories = ARGV[1..-1].dup
    else
      at.find_directories = []
      at.extra_files = ARGV.dup
    end
  end
end

