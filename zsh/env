if [[ -v ZED_ENVIRONMENT ]]; then
  export EDITOR='zed -- wait'
else
  export EDITOR=vim
fi

export MIX_OS_DEPS_COMPILE_PARTITION_COUNT=$(
  echo "$(sysctl -n hw.physicalcpu) / 2" | bc
)

# Enable history Elixir iex
export ERL_AFLAGS="-kernel shell_history enabled"

export GPG_TTY=$(tty)
setopt INTERACTIVE_COMMENTS

export PATH="$HOME/Workspaces/bin:$PATH"
